#!/bin/bash

# Help menu
function help_menu() {
    echo -e "$(basename "$0") [OPTIONS]"
    echo -e "Options:"
    echo -e "  -d, --domain DOMAIN       Specify the domain to scan for postman leaks."
    echo -e "  -o, --output FILE         (Optional) Specify the output file path (prints to stdout if not set)"
    echo -e "  -h, --help                Display this help menu"
    exit 1
}

# Main function
function postleaks() {
    # Validate tools
    for tool in postleaksNg; do
        if ! command -v $tool &> /dev/null; then
            echo -e "${bred}Error: ${tool} is not installed.${reset}" >&2
            exit 1
        fi
    done

    echo -e "${yellow}Scanning for leaks in postman public directory${reset}"
    postleaksNg -k "$domain" > .tmp/postleaks.txt  || { echo "postleaksNg command failed"; exit 1; }
    if [ -z "$output_file" ]; then
        cat ".tmp/postleaks.txt" 2>/dev/null
    else
        cat ".tmp/postleaks.txt" 2>/dev/null > "$output_file"
    fi
}

# Default values
domain=""
output_file=""

# Parse command-line arguments
while [[ "$#" -gt 0 ]]; do
    case $1 in
        -d|--domain) domain="$2"; shift ;;
        -o|--output) output_file="$2"; shift ;;
        -h|--help) help_menu ;;
        *) echo -e "${bred}Unknown parameter passed: $1${reset}" >&2; help_menu ;;
    esac
    shift
done

# Validate the domain using the utility script
rftw_util_validatedomain "$domain" || exit 1

# Validate inputs
if [ -z "$domain" ]; then
    echo -e "${bred}Error: Missing required parameters.${reset}" >&2
    help_menu
    exit 1
fi

# Execute the main function
postleaks

#!/bin/bash

# Description: Script to validate a domain, website, or URL
# Author: Your Name
# Date: Date

# Regex for domain, website, or URL validation
DOMAIN_VALIDATION_REGEX="^(?:[a-zA-Z0-9]+:\/\/)?(?:[a-zA-Z0-9](?:[a-zA-Z0-9\-]*[a-zA-Z0-9])?\.)+[a-zA-Z]{1,}(?::\d+)?(?:\/[^\s]*)?$"

# Function to validate the domain
validate_domain() {
	local DOMAIN="$1"
	if [[ ${DOMAIN} =~ ${DOMAIN_VALIDATION_REGEX} ]]; then
		echo "Valid domain/URL."
		exit 0
	else
		echo "Invalid domain/URL."
		exit 1
	fi
}

# Check if a domain is provided
if [[ $# -ne 1 ]]; then
	echo "$(basename "$0") <domain/website/URL>"
	exit 1
fi

# Call the validation function
validate_domain "$1"
